<UserControl x:Class="wcc_lite_gui_wpf.Templates.DTVariable"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:wcc_lite_gui_wpf.Templates"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="100">
    
    <Grid VerticalAlignment="Stretch">
        <Border Margin="1" Padding="1" BorderThickness="2" BorderBrush="Black" Background="CornflowerBlue" CornerRadius="10">
            <TextBlock  Text="{Binding Name}" 
                        VerticalAlignment="Center" 
                        TextAlignment="Center"
                        Height="auto" 
                        Padding="1"
                        FontWeight="DemiBold" 
                        FontSize="10"
                        />
        </Border>

    </Grid>
</UserControl>
