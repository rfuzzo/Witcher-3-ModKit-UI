<UserControl x:Class="w3tools.UI.Views.UserControls.SearchBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:w3tools.UI.Views.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <!-- Textbox -->
            <ColumnDefinition Width="*"/>
            <!-- Button -->
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>

        <!-- Textbox -->
        <TextBox Grid.Column="0" Text="{Binding Text}"/>

        <!-- Button -->
        <Button Grid.Column="1" Command="{Binding Command}">
            <Image Source="/w3tools.UI;component/Resources/Icons/Search_16x.png"/>
        </Button>

    </Grid>
</UserControl>
